<div class="card h-100 p-4 d-flex flex-column justify-content-center">
    <h6 class="text-uppercase text-muted small fw-bold mb-3 tracking-wide">@Title</h6>
    
    @if (IsLoading)
    {
        <div class="d-flex align-items-center">
            <div class="spinner-border spinner-border-sm text-primary me-2" role="status"></div>
            <span class="text-muted small">Carregando...</span>
        </div>
    }
    else
    {
        <h2 class="display-6 fw-bold mb-0 @ValueColorClass" style="font-family: var(--font-heading);">@Value</h2>
    }
</div>

